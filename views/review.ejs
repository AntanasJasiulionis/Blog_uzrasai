<%- include("./partials/header.ejs") %>
<% if(!locals.loggedIn && locals.message){%>
    <div id="important-message">
        <p><span>Pastaba!</span> Užrašai yra išsaugojami laikinoje atmintyje. Norėdami išsaugoti užrašus <span>PRISIJUNKITE</span> arba <span>UŽSIREGISTRUOKITE</span></p>
        <img alt="cancel" src="../../assets/cancel.svg"/>
    </div>
 <%}%>
 <!--User login, logout-->
 <div class="login-logout">
    <% if(locals.loggedIn){%>
        <div>Sveiki <span><%= user.name %></span>, <a href="/logout">Atsijungti <img alt="logout" src="../../assets/logout.png"/></a></div>
    <%} else {%>
        <div><a href="/login">Prisijunkite <img alt="login" src="../../assets/login.png"/></a></div>
    <%}%>
</div>
<div class="home"><a href="/"><img src="../assets/home.png"></a><a class="paragraph">Į pagrindinį</a></div>
<div class="review">
    <h1><%= post.title %></h1>
    <p><%= post.description %></p>
    <div class="created-name-date">Sukurta: <span><%= post.date %></span>, <span><%= post.user %></span></div>
    <a href="/post/<%= post.id %>/edit"><button class="button_edit">Pakeisti</button></a>
    <button class="button_delete">Ištrinti</button>
</div>
<div class="confirmation_box">
    <a>Ar tikrai norite ištrinti šį postą?<br/><span><%= post.title %></span></a>
    <a href="/post/<%= post.id %>/delete?_method=DELETE"><button class="confirmation_box_yes">Taip</button></a>
    <button class="confirmation_box_no">Ne</button>
</div>
<%- include("./partials/footer.ejs") %>